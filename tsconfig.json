{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./src/*"
            ]
        }
    }
}
